# EthIQ Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# LLM Provider Configuration
# Options: openai, gemini, mock
LLM_PROVIDER=mock

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Google Generative AI Configuration (if using Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# Notion Integration (optional)
NOTION_TOKEN=your_notion_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Cloudera Integration (optional)
CLOUDERA_HOST=your_cloudera_host_here
CLOUDERA_PORT=9092
CLOUDERA_TOPIC=ethiq-metrics
CLOUDERA_USERNAME=your_cloudera_username_here
CLOUDERA_PASSWORD=your_cloudera_password_here

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080

# Security
SECRET_KEY=your_secret_key_here_change_this_in_production

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development Settings
ENVIRONMENT=development
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Testing
TEST_MODE=False
MOCK_LLM=True
